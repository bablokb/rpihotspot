ssid=rpi-hotspot

ctrl_interface=/var/run/hostapd
interface=wlan0
bridge=br0
driver=rtl871xdrv
channel=11

beacon_int=100
hw_mode=g
ieee80211n=0
wmm_enabled=1
ht_capab=[SHORT-GI-20][SHORT-GI-40][HT40-]

wpa=2
wpa_passphrase=my+pi-hotspot!
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP TKIP
max_num_sta=8
wpa_group_rekey=86400

ignore_broadcast_ssid=0